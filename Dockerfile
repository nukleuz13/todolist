# Используем за основу образ Node.js
FROM node:14-alpine

# Устанавливаем рабочую директорию внутри контейнера
WORKDIR /usr/src/app

# Копируем зависимости проекта
COPY package*.json ./

# Устанавливаем зависимости
RUN npm install

# Копируем все файлы проекта в текущую директорию внутри контейнера
COPY . .

# Определяем порт, который будет использоваться приложением
EXPOSE 3000

# Команда, которая будет запускаться при старте контейнера
CMD ["npm", "start"]
